package phan03;

import java.util.Scanner;

/**
 * 
 * @author Viết chương trình kiểm tra số nhập vào có phải là số nguyên tố hay không.
 *
 */
public class Bai06 {
	   public static void main(String[] args) {
	       Scanner sc = new Scanner(System.in);
	       System.out.print("Nhap vao mot so bat ky de kiem tra so nguyen to : ");
	       int n = sc.nextInt();
	       if (isPrime(n)) {
	           System.out.println("So " + n + " la so nguyen to");
	       } else {
	           System.out.println("So " + n + " khong la so nguyen to");
	       }
	   }
	 
	   public static boolean isPrime(int n) {
	       if (n <= 1) {
	           return false;
	       }
	       for (int i = 2; i <= Math.sqrt(n); i++) {
	           if (n % i == 0) {
	               return false;
	           }
	       }
	       return true;
	   }
}
