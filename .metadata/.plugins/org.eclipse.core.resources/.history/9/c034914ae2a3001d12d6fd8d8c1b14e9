package phan03;

import java.util.Scanner;

public class Bai04 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Welcome to giai phuong trinh bac 1");
		System.out.println("ax + b = 0");
		
		System.out.println("Moi ban nhap a: ");
		int a = sc.nextInt();
		while (a == 0) {
			System.out.println("a phai khac 0");
			System.out.println("Moi ban nhap lai a: ");
			int a = sc.nextInt();
		}
		System.out.println("Moi ban nhap b: ");
		int b = sc.nextInt();
		
		System.out.println("Ket qua ph");
	}
}
