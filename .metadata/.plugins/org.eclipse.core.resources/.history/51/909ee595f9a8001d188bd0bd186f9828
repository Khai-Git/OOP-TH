package LT_Chuong3;

public class HinhChuNhat {
	private float cDai;
	private float cRong;
	
	public HinhChuNhat() {
		super();
	}
	public HinhChuNhat(float cDai, float cRong) {
		super();
		if(cDai > 0) {
			this.cDai = cDai;
		} else {
			cDai = 0;
		}
		if(cRong > 0) {
			this.cRong = cRong;
		} else {
			cRong = 0;
		}
	}
	public float getcDai() {
		return cDai;
	}
	public void setcDai(float cDai) {
		if(cDai > 0) {
			this.cDai = cDai;
		} else {
			cDai = 0;
		}
	}
	public float getcRong() {
		return cRong;
	}
	public void setcRong(float cRong) {
		if(cRong > 0) {
			this.cRong = cRong;
		} else {
			cRong = 0;
		}
	}
	
	public float tinhChuVi() {
		return (cDai + cRong) * 2;
	}
	
	public float tinhDienTich() {
		return cDai * cRong;
	}
	@Override
	public String toString() {
		return "HinhChuNhat [cDai=" + cDai + ", cRong=" + cRong + "]";
	}
	
	
}
