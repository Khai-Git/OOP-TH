package phan03;

import java.util.Scanner;
/**
 * 
 * @author Viết chương trình giải phương trình bậc 1
 *
 */
public class Bai04 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Welcome to giai phuong trinh bac 1");
		System.out.println("ax + b = 0");
		
		System.out.print("Moi ban nhap a: ");
		float a = sc.nextFloat();
		while (a == 0) {
			System.out.println("a phai khac 0");
			System.out.print("Moi ban nhap lai a: ");
			a = sc.nextInt();
		}
		System.out.print("Moi ban nhap b: ");
		float b = sc.nextFloat();
		
		float x = -b / a;
		
		if (b > 0) {
			System.out.println("Phuong trinh " + a + "x" + "+" + b + "=0");
			System.out.println("Ket qua x =" + x);
		}else {
			System.out.println("Phuong trinh " + a + "x" + b + "=0");
			System.out.println("Ket qua x =" + x);
		}
	}
}
