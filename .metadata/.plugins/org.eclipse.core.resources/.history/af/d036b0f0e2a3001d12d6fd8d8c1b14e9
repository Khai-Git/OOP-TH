package phan03;

import java.util.Scanner;

public class Bai04 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Welcome to giai phuong trinh bac 1");
		System.out.println("ax + b = 0");
		
		System.out.println("Moi ban nhap a: ");
		int a = sc.nextInt();
		while (a == 0) {
			System.out.println("a phai khac 0");
			System.out.println("Moi ban nhap lai a: ");
			a = sc.nextInt();
		}
		System.out.println("Moi ban nhap b: ");
		int b = sc.nextInt();
		
		double x = -b / a;
		
		if (b > 0) {
			System.out.println("Phuong trinh " + a + "x" + "+" + b + "=0");
			System.out.println("Ket qua x =" + x);
		}else {
			System.out.println("Phuong trinh " + a + "x" + b + "=0");
			System.out.println("Ket qua x =" + x.2);
		}
	}
}
