package phan03;

import java.util.Scanner;

/**
 * 
 * 3/ Viết chương trình in ra tổng 1+3+5+…+n nếu n là số lẻ, 2+4+6+…+n nếu n là số chẵn.
 * 
 * @author
 * */
public class Bai03 {
	public static void main(String[] args) {
		int tong = 0;
		Scanner nhap = new Scanner(System.in);
		System.out.print("Mời bạn nhập n: ");
		int n =  nhap.nextInt();
		
		if(n % 2 == 0) {
			for (int i = 0; i < n && i% 2 == 0; i++) {
				tong = tong + i;
			}
			System.out.println("Tổng chẵn = " + tong);
		} else {
			for (int i = 0; i < n; i++) {
				tong = tong + i;
			}
			System.out.println("Tổng lẻ = " + tong);
		}
	}
}
